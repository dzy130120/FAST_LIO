<launch>

    <arg name="rviz" default="false" />

    <rosparam command="load" file="$(find fast_lio)/config/rgbd.yaml" />
    <param name="/use_sim_time" value="true"/>
    <param name="feature_extract_enable" type="bool" value="0"/>
    <param name="point_filter_num" type="int" value="4"/>
    <param name="max_iteration" type="int" value="3" />
    <param name="dense_map_enable" type="bool" value="1" />
    <param name="filter_size_surf" type="double" value="0.1" />
    <param name="filter_size_map" type="double" value="0.1" />
    <param name="cube_side_length" type="double" value="100" />
    <param name="preprocess/lidar_type" type="int" value="4" />
    <param name="preprocess/scan_line" type="int" value="480"/>
    <param name="common/lid_topic" type="string" value="/camera/depth/color/points" />
    <param name="common/imu_topic" type="string" value="/camera/imu" /> 
    <node pkg="fast_lio" type="fastlio_mapping" name="laserMapping" output="screen" /> 

    <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find fast_lio)/rviz_cfg/loam_livox.rviz" />
    </group>
    <node pkg="rosbag" type="play" name="player" output="log" args="--clock -r0.4 /home/dzy/dynamic_pcs.bag"/>
</launch>